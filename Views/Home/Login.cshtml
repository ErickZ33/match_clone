@{
    ViewData["Title"] = "Home Page";
}
@model Match.Models.LoginViewModel
@using Match
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div id="sexPreferenceContainer">
    <div class="row">
         <div class="col-md-4 col-md-offset-4 sexPerference"> 
            <form asp-controller="Home" asp-action="loginUser" method="post" class="form">
                <h3 style="text-align:center">Welcome Back!</h3>
                <div class="input-field col s12">
                    <span style="text-align:center" asp-validation-for="email"></span>
                    <label asp-for="email"></label>
                    <input class="form-control" asp-for="email" type="text">
                </div>
                <div class="input-field col s12">
                    <span asp-validation-for="password"></span>
                    <label asp-for="password"></label>
                    <input type="password" class="form-control" name="Password">
                </div>
                <button class="btn waves-effect waves-light blue" type="submit" style="width:100%">Login</button>
                <a href="/"><p class="logRegRedirects">Not a member?</p></a>
            </form>
        </div>
    </div>
</div>